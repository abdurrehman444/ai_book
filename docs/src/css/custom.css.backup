/**
 * Any CSS included here will be global. The classic template
 * bundles Infima by default. Infima is a CSS framework designed to
 * work well for content-centric websites.
 */

/* You can override the default Infima variables here. */
:root {
  --ifm-color-primary: #2563eb;
  --ifm-color-primary-dark: #1d4ed8;
  --ifm-color-primary-darker: #1a41be;
  --ifm-color-primary-darkest: #15349a;
  --ifm-color-primary-light: #3b75f0;
  --ifm-color-primary-lighter: #5286f3;
  --ifm-color-primary-lightest: #6997f6;
  --ifm-code-font-size: 95%;
  --docusaurus-highlighted-code-line-bg: rgba(0, 0, 0, 0.1);
}

/* For readability concerns, you should choose a lighter palette in dark mode. */
[data-theme='dark'] {
  --ifm-color-primary: #3b82f6;
  --ifm-color-primary-dark: #2563eb;
  --ifm-color-primary-darker: #1d4ed8;
  --ifm-color-primary-darkest: #1e40af;
  --ifm-color-primary-light: #60a5fa;
  --ifm-color-primary-lighter: #93c5fd;
  --ifm-color-primary-lightest: #bfdbfe;
  --docusaurus-highlighted-code-line-bg: rgba(0, 0, 0, 0.3);
}

/* Custom styles for Physical AI & Humanoid Robotics textbook */

/* Special styling for learning objectives */
.learning-objectives {
  background-color: #f8f9fa;
  border-left: 4px solid #25c2a0;
  padding: 1rem;
  margin: 1.5rem 0;
}

.learning-objectives h3 {
  margin-top: 0;
  color: #2c3e50;
}

/* Styling for exercises sections */
.exercises {
  background-color: #fff3cd;
  border-left: 4px solid #ffc107;
  padding: 1rem;
  margin: 1.5rem 0;
}

.exercises h3 {
  margin-top: 0;
  color: #856404;
}

/* Styling for assessment sections */
.assessment {
  background-color: #d1ecf1;
  border-left: 4px solid #17a2b8;
  padding: 1rem;
  margin: 1.5rem 0;
}

.assessment h3 {
  margin-top: 0;
  color: #0c5460;
}

/* Custom styling for code examples related to robotics */
.robocode {
  font-family: 'SFMono-Regular', 'Menlo', 'Monaco', 'Consolas', 'Liberation Mono', 'Courier New', monospace;
  background-color: #2d3748;
  color: #e2e8f0;
  padding: 1rem;
  border-radius: 0.375rem;
  overflow-x: auto;
}

/* Custom styling for important robotics concepts */
.important-concept {
  border: 2px solid #e53e3e;
  border-radius: 0.5rem;
  padding: 1rem;
  margin: 1.5rem 0;
  background-color: #fff5f5;
}

.important-concept h3 {
  color: #c53030;
  margin-top: 0;
}

/* Styling for multi-modal interaction diagrams (when they exist) */
.multimodal-diagram {
  text-align: center;
  margin: 2rem 0;
  padding: 1rem;
  border: 1px solid #cbd5e0;
  border-radius: 0.5rem;
  background-color: #f7fafc;
}

/* Responsive adjustments for textbook content */
@media (max-width: 996px) {
  .learning-objectives, .exercises, .assessment {
    padding: 0.75rem;
  }
}
